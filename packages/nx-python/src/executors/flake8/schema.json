{
  "$schema": "http://json-schema.org/schema",
  "title": "Flake8 executor",
  "description": "",
  "type": "object",
  "properties": {
    "outputFile": {
      "type": "string",
      "description": "Output pylint file path"
    },
    "silent": {
      "type": "boolean",
      "description": "Hide output text.",
      "default": false
    },
    "installDependenciesIfNotExists": {
      "type": "boolean",
      "description": "Run the package manager install command if the virtual environment is not activated (default: false)",
      "default": false
    }
  },
  "required": ["outputFile"]
}
