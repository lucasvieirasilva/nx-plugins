{
  "$schema": "http://json-schema.org/schema",
  "title": "Serverless Framework Deploy Executor",
  "description": "",
  "type": "object",
  "properties": {
    "stage": {
      "type": "string",
      "description": "Stage Name"
    },
    "verbose": {
      "type": "boolean",
      "description": "Verbose flag.",
      "default": true
    },
    "force": {
      "type": "boolean",
      "description": "Force flag.",
      "default": false
    },
    "installDependenciesIfNotExists": {
      "type": "boolean",
      "description": "Run the package manager install command if the virtual environment is not activated (default: false)",
      "default": false
    }
  },
  "required": ["stage"]
}
