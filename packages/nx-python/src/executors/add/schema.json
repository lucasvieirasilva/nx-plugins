{
  "$schema": "http://json-schema.org/schema",
  "title": "Add executor",
  "description": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the Dependency name?"
    },
    "args": {
      "type": "string",
      "description": "Install additional arguments"
    },
    "local": {
      "type": "boolean",
      "description": "Local dependency",
      "default": false
    },
    "group": {
      "type": "string",
      "description": "Dependency Group"
    },
    "extras": {
      "type": "array",
      "description": "Extras to activate for the dependency",
      "items": {
        "type": "string"
      }
    },
    "installDependenciesIfNotExists": {
      "type": "boolean",
      "description": "Run the package manager install command if the virtual environment is not activated (default: false)",
      "default": false
    }
  },
  "required": ["name"]
}
